{% extends 'base.html.twig' %}

{% block body %}
    <article>
        <h2> {{ article.Titre }}</h2>
        <div class="metadata"> Crée le {{ article.createdAt | date('d/m/Y') }} à {{  article.createdAt | date("H:i") }} dans la catégorie {{ article.category.title }}</div>
        <div class="content">
            <img src="{{ article.image }}" alt="">
            <p>{{ article.Description }}</p>
            <p> {{ article.Auteur }}</p>
        </div>
    </article>
{% endblock %}

